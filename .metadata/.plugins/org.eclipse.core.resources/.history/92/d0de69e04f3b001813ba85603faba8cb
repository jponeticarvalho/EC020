#include "System/Timer.h"
#include "lpc17xx_clkpwr.h"

void peripheralInit(void);

int main (void)
{
	peripheralInit();
	Timer_init();
//	command_init();
//	Display_Ctrl_Init();
	uint32_t time = 0;

	while(1)
	{
//		command_processLoop();
//		Display_Ctrl_ProcessLoop();
//		Timer_delay(TIMER_500MS);
		time = Timer_getTimer();

	}
}

void peripheralInit(void)
{

	CLKPWR_ConfigPPWR(CLKPWR_PCONP_PCGPIO, ENABLE);

}
