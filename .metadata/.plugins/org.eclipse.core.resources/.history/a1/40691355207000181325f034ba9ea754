#ifndef COMMON_H_
#define COMMON_H_

#include "LPC17xx.h"
#include "PinDefinition.h"
#include "lpc_types.h"
#include <stdio.h>
#include <stdint.h>
#include <string.h>

typedef enum enuSource
{
	TEMP,
	LIGHT,
	BUT,
} tenuSource;

typedef struct tagMessage
{

	tenuSource 	enuSource;
	uint32_t	ulPayload;

} ttagMessage;

typedef void (*pvCallback)(ttagMessage tagMsg);

#endif /* COMMON_H_ */
